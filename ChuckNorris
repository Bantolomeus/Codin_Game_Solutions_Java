class Solution {

    public static void main(String args[]) {
        Scanner in = new Scanner(System.in);
        String message = in.nextLine();
        String output = "";
        String oneChar;
        int countQuantity = 0;

        for(int i = 0; i < message.length(); i++){   
            char character = 'a';    
            int ascii = (int) character;
            
            for(){
                oneChar = Character.toString(message.charAt(i));
                System.err.println(message);
                System.err.println(oneChar == "1");
                countQuantity = 0;
                while(i < message.length() && message.charAt(i) == 0){
                    System.err.println("0");
                    if(countQuantity == 0){
                        output = output + "00 0";
                    } else{
                        output = output + "0";
                    }
                    
                    countQuantity++;
                    i++;
                }
                countQuantity = 0;
                while(i < message.length() && message.charAt(i) == 1){
                    System.err.println("1");
                    if(countQuantity == 1){
                        output = output + "0 0";
                    } else{
                        output = output + "0";
                    }
                    
                    countQuantity++;
                    i++;    
                }
            }
        }
        // Write an action using System.out.println()
        // To debug: System.err.println(message.charAt(i) == 0);

        System.out.println(output);
    }
}
